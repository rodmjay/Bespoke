{
    "AppSettings": {
        "Name": "IdentityPro.Idp",
        "Version": "v1",
        "Mode": "Live"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Warning",
            "Override": {
                "IdentityPro": "Debug",
                "Bespoke": "Information"
            }
        }
    },
    "DbSettings": {
        "Timeout": 20,
        "MaxRetryCount": 5,
        "MaxRetryDelaySeconds": 20,
        "MaxBatchSize": 100,
        "SplitQueries": false,
        "UseContextPooling": false,
        "MigrationsAssembly": "IdentityPro.Infrastructure.SqlServer",
        "ValidateSaves": true,
        "SqlServer": {
            "ConnectionStringName": "DefaultConnection"
        }
    },
    "RestSettings": {
        "Cors": {
            "AllowAllOrigins": false,
            "AllowedOrigins": [
                "http://localhost:4200",
                "https://localhost:4200",
                "https://localhost:5000",
                "http://localhost:5000"
            ]
        }
    },
    "AzureSettings": {
        "AppInsights": {
            "CloudRoleName": "IDENTITYPRO-LOC"
        },
        "AzureAd": {
            "Instance": "https://login.microsoftonline.com/",
            "Domain": "yourdomain.com",
            "TenantId": "your-tenant-id",
            "ClientId": "your-client-id",
            "CallbackPath": "/signin-oidc"
        }
    },
    "ConnectionStrings": {
        "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=IdentityPro;Trusted_Connection=True;MultipleActiveResultSets=true",
        "AzureStorage": "<NOT SET HERE>",
        "AppInsights": "<NOT SET HERE>"

    }
}