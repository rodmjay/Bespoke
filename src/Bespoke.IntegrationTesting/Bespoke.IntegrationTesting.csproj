<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TreatWarningsAsErrors>false</TreatWarningsAsErrors>
		<NoWarn>NU1902</NoWarn>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageTags>microservice</PackageTags>
		<RepositoryUrl>https://github.com/rodmjay/bespoke</RepositoryUrl>
		<Description>Bespoke library for building microservices</Description>
		<Authors>Rod Johnson</Authors>
		<Version>1.0.7</Version>
		<PackageId>Bespoke.IntegrationTesting</PackageId>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>disable</Nullable>
		<RootNamespace>Bespoke.IntegrationTesting</RootNamespace>
		<IsPackable>true</IsPackable>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Azure.Identity" />
		<PackageReference Include="Microsoft.AspNetCore.Mvc.Testing" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" />
		<PackageReference Include="Microsoft.NET.Test.Sdk" />
		<PackageReference Include="NUnit" />
		<PackageReference Include="NUnit3TestAdapter" />
		<PackageReference Include="NUnit.Analyzers" />
		<PackageReference Include="coverlet.collector" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\src\Bespoke.Core\Bespoke.Core.csproj" />
		<ProjectReference Include="..\..\src\Bespoke.Data\Bespoke.Data.csproj" />
		<ProjectReference Include="..\..\src\Bespoke.Services\Bespoke.Services.csproj" />
		<ProjectReference Include="..\..\src\Bespoke.Rest\Bespoke.Rest.csproj" />
	</ItemGroup>

</Project>

