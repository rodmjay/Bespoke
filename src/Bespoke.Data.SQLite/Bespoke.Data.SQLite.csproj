<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <NoWarn>NU1902</NoWarn>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>microservice</PackageTags>
    <RepositoryUrl>https://github.com/rodmjay/bespoke</RepositoryUrl>
    <Description>Bespoke library for SQLite database support</Description>
    <Authors>Rod Johnson</Authors>
    <Version>1.0.6</Version>
    <PackageId>Bespoke.Data.SQLite</PackageId>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <RootNamespace>Bespoke.Data.SQLite</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Bespoke.Data\Bespoke.Data.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Include the README.md file in the package -->
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
