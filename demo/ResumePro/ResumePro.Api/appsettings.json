{
    "AppSettings": {
        "Name": "ResumePro",
        "Version": "v1",
        "Mode": "Demo",
        "UseSQLite": true
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "ResumePro": "Debug",
                "Bespoke": "Debug"
            }
        }
    },
    "DbSettings": {
        "Timeout": 20,
        "MaxRetryCount": 5,
        "MaxRetryDelaySeconds": 20,
        "MaxBatchSize": 100,
        "SplitQueries": false,
        "UseContextPooling": false,
        "MigrationsAssembly": "ResumePro.Infrastructure.SQLite",
        "ValidateSaves": true,
        "SQLite": {
            "ConnectionStringName": "SQLiteConnection"
        }
    },
    "RestSettings": {
        "Cors": {
            "AllowAllOrigins": false,
            "AllowedOrigins": [
                "http://localhost:4200",
                "https://localhost:4200",
                "https://localhost:5000",
                "http://localhost:5000"
            ]
        }
    },
    "AzureSettings": {
        "ConnectionStringName": "AzureStorage",
        "AppInsights": {
            "CloudRoleName": "RESUMEPRO-LOC"
        }
    },
    "ConnectionStrings": {
        //"DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=ResumePro;Trusted_Connection=True;MultipleActiveResultSets=true",
        "DefaultConnection": "Data Source=ResumePro.db",
        "SQLiteConnection": "Data Source=ResumePro.db",
        "AzureStorage": "<NOT SET HERE>",
        "AppInsights": "<NOT SET HERE>"
    }
}
