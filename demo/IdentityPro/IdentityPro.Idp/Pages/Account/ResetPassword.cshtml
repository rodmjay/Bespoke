@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Reset your password
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Enter your new password below
            </p>
        </div>
        <form class="mt-8 space-y-6" method="post">
            <div asp-validation-summary="All" class="text-red-500 text-sm"></div>
            <input asp-for="Input.Code" type="hidden" />
            
            <div>
                <label asp-for="Input.Email" class="sr-only"></label>
                <input asp-for="Input.Email" class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address" />
                <span asp-validation-for="Input.Email" class="text-red-500 text-xs"></span>
            </div>
            
            <div>
                <label asp-for="Input.Password" class="sr-only"></label>
                <input asp-for="Input.Password" class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="New password" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
            </div>
            
            <div>
                <label asp-for="Input.ConfirmPassword" class="sr-only"></label>
                <input asp-for="Input.ConfirmPassword" class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Confirm new password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-xs"></span>
            </div>

            <div class="mt-4">
                <div class="text-sm text-gray-700 mb-2">Password must contain:</div>
                <ul class="list-disc pl-5 text-xs text-gray-600 space-y-1">
                    <li>At least 8 characters</li>
                    <li>At least one uppercase letter</li>
                    <li>At least one lowercase letter</li>
                    <li>At least one number</li>
                    <li>At least one special character</li>
                </ul>
            </div>

            <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Reset Password
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
