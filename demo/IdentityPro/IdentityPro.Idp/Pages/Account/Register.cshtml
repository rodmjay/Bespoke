@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Create a new account
            </h2>
        </div>
        <form class="mt-8 space-y-6" method="post">
            <div asp-validation-summary="All" class="text-red-500 text-sm"></div>
            <input type="hidden" asp-for="ReturnUrl" />
            
            <div class="rounded-md shadow-sm -space-y-px">
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                    <div>
                        <label asp-for="Input.FirstName" class="sr-only"></label>
                        <input asp-for="Input.FirstName" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="First Name" />
                        <span asp-validation-for="Input.FirstName" class="text-red-500 text-xs"></span>
                    </div>
                    <div>
                        <label asp-for="Input.LastName" class="sr-only"></label>
                        <input asp-for="Input.LastName" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Last Name" />
                        <span asp-validation-for="Input.LastName" class="text-red-500 text-xs"></span>
                    </div>
                </div>
                
                <div>
                    <label asp-for="Input.Email" class="sr-only"></label>
                    <input asp-for="Input.Email" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address" />
                    <span asp-validation-for="Input.Email" class="text-red-500 text-xs"></span>
                </div>
                
                <div>
                    <label asp-for="Input.Password" class="sr-only"></label>
                    <input asp-for="Input.Password" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
                </div>
                
                <div>
                    <label asp-for="Input.ConfirmPassword" class="sr-only"></label>
                    <input asp-for="Input.ConfirmPassword" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Confirm Password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <div class="mt-4">
                <div class="text-sm text-gray-700 mb-2">Password must contain:</div>
                <ul class="list-disc pl-5 text-xs text-gray-600 space-y-1">
                    <li>At least 8 characters</li>
                    <li>At least one uppercase letter</li>
                    <li>At least one lowercase letter</li>
                    <li>At least one number</li>
                    <li>At least one special character</li>
                </ul>
            </div>

            <div class="flex items-center">
                <input asp-for="Input.TermsAndConditions" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
                <label asp-for="Input.TermsAndConditions" class="ml-2 block text-sm text-gray-900">
                    I agree to the Terms and Conditions
                </label>
            </div>
            <span asp-validation-for="Input.TermsAndConditions" class="text-red-500 text-xs"></span>

            <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Register
                </button>
            </div>
            
            <div class="text-center mt-4">
                <p class="text-sm text-gray-600">
                    Already have an account?
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="font-medium text-indigo-600 hover:text-indigo-500">
                        Sign in
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
