<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IdentityPro.Idp</title>
    <!-- Include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IdentityPro.Idp.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <!-- Navigation -->
    <nav class="bg-white py-6">
        <div class="container mx-auto flex items-center justify-between px-4">
            <a class="text-xl font-bold text-gray-800" asp-area="" asp-page="/Index">IdentityPro.Idp</a>
            <button class="lg:hidden focus:outline-none">
                <svg class="w-6 h-6 text-gray-800" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
                    <path d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
            <div class="hidden lg:flex lg:items-center lg:w-auto lg:space-x-6">
                <a class="text-gray-800 hover:text-gray-600" asp-area="" asp-page="/Index">Home</a>
                <a class="text-gray-800 hover:text-gray-600" asp-area="" asp-page="/Privacy">Privacy</a>
                <a class="text-gray-800 hover:text-gray-600" asp-area="" asp-page="/Account/Register">Register</a>
                <a class="text-gray-800 hover:text-gray-600" asp-area="" asp-page="/Account/Login">Sign In</a>
            </div>
        </div>
    </nav>

    <!-- Content -->
    <div class="container mx-auto px-4 py-8">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200">
        <div class="container mx-auto py-4 px-4">
            <div class="text-center text-sm text-gray-500">&copy; 2025 - IdentityPro.Idp - <a class="text-blue-500 hover:text-blue-700" asp-area="" asp-page="/Privacy">Privacy</a></div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
